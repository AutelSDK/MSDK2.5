<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/debug_gray">

    <TextView
        android:id="@+id/tv_input_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/debug_dimen_dp_12"
        android:gravity="center"
        android:textColor="@color/debug_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_input"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="widgetName" />

    <TextView
        android:id="@+id/tv_input_hint"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/debug_dimen_dp_12"
        android:gravity="center"
        android:textColor="@color/debug_white"
        app:layout_constraintBottom_toBottomOf="@+id/et_input"
        app:layout_constraintEnd_toStartOf="@+id/et_input"
        app:layout_constraintTop_toTopOf="@+id/et_input"
        tools:text="100%" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/debug_dimen_dp_8"
        android:layout_marginEnd="@dimen/debug_dimen_dp_12"
        android:layout_marginBottom="@dimen/debug_dimen_dp_8"
        android:inputType="number"
        android:background="@drawable/debug_shape_list_item_default_4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>