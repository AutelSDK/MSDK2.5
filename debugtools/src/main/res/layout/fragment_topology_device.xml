<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/debug_gray">

    <Button
        android:id="@+id/start_login"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:text="login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/obtain_devices"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:text="obtain devices"
        app:layout_constraintStart_toEndOf="@id/start_login"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/create_element"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:text="create element"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/obtain_devices"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/update_element"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:text="update element"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/create_element"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_element"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:text="delete element"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/update_element"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="login state: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/topology_device_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="100"
        android:text="topology_device_result: "
        app:layout_constraintStart_toStartOf="@id/login_state"
        app:layout_constraintTop_toBottomOf="@id/login_state" />





</androidx.constraintlayout.widget.ConstraintLayout>