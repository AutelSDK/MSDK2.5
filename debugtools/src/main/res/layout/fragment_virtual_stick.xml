<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/debug_black">

    <LinearLayout
        android:id="@+id/left_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lens_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:layout_marginTop="@dimen/debug_dimen_dp_32"
        android:text="LensType:"
        android:textColor="@color/debug_white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_lens"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/debug_dimen_dp_32"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/tv_lens_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_control_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:layout_marginTop="@dimen/debug_dimen_dp_15"
        android:text="@string/debug_stick_control_mode"
        android:textColor="@color/debug_white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lens_type" />

    <Spinner
        android:id="@+id/spinner_mode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:entries="@array/debug_stick_mode"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@id/tv_control_mode"
        app:layout_constraintTop_toTopOf="@id/tv_control_mode" />

    <TextView
        android:id="@+id/tv_stick_mode_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:layout_marginTop="@dimen/debug_dimen_dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_control_mode" />

    <TextView
        android:id="@+id/tv_gear_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:layout_marginTop="@dimen/debug_dimen_dp_15"
        android:text="@string/debug_gear_level"
        android:textColor="@color/debug_white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stick_mode_remark" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:entries="@array/debug_stick_level"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@id/tv_gear_level"
        app:layout_constraintTop_toTopOf="@id/tv_gear_level" />

    <TextView
        android:id="@+id/level_full_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:layout_marginTop="8dp"
        android:textColor="@color/debug_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        tools:text="level_full_info" />

    <TextView
        android:id="@+id/real_data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:text="@string/debug_flight_data_title"
        android:textColor="@color/debug_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <LinearLayout
        android:id="@+id/layoutGimbal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:layout_marginTop="@dimen/debug_dimen_dp_32"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/left_video_layout"
        app:layout_constraintTop_toBottomOf="@id/level_full_info">

        <TextView
            android:id="@+id/tv_gimbal_pitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gimbal Pitch"
            android:textColor="@color/debug_white"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/sb_gimbal_pitch"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/debug_dimen_dp_8"
            android:max="200"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/seek_bar_thumb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="[-100, 100]"
            android:textColor="@color/debug_white"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_start_motor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:contentDescription="start motor"
        android:src="@drawable/icon_camera_take_off_normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />


    <TextView
        android:id="@+id/location_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="4"
        android:textColor="@color/debug_white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/real_data_title"
        app:layout_constraintTop_toBottomOf="@id/real_data_title"
        tools:text="location" />

    <TextView
        android:id="@+id/data_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/debug_dimen_dp_100"
        android:maxLines="4"
        android:textColor="@color/debug_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="value" />

    <com.autel.sdk.debugtools.view.virtualstick.JoystickView
        android:id="@+id/left_stick_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/debug_dimen_dp_32"
        android:layout_marginBottom="@dimen/debug_dimen_dp_32"
        android:background="@mipmap/joystick_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.autel.sdk.debugtools.view.virtualstick.JoystickView
        android:id="@+id/right_stick_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="@dimen/debug_dimen_dp_32"
        android:layout_marginBottom="@dimen/debug_dimen_dp_32"
        android:background="@mipmap/joystick_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>